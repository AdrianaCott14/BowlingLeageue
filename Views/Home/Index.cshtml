@{
    ViewData["Title"] = "Home Page";
}
@model IndexViewModel

    <div class="container">
        <h1>Bowling League Contact List</h1>
        <h2>@Model.TeamCategory</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Middle Init.</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">Zip</th>
                    <th scope="col">Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bl in Model.Bowlers)
                {
                    <tr>
                        <td>@bl.BowlerFirstName</td>
                        <td>@bl.BowlerMiddleInit</td>
                        <td>@bl.BowlerLastName</td>
                        <td>@bl.BowlerAddress</td>
                        <td>@bl.BowlerCity</td>
                        <td>@bl.BowlerState</td>
                        <td>@bl.BowlerZip</td>
                        <td>@bl.BowlerPhoneNumber</td>
                    </tr>
                }

            </tbody>
        </table>
        <div page-info="@Model.PageNumberingInfo" 
             page-url-team-category="@Model.TeamCategory"
             page-classes-enabled="true"
             page-class="btn"
             page-class-selected="btn-primary"
             class="btn-group pull-right m-1"></div>
    </div>
